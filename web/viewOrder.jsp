        <body>
        <c:if test="${sessionScope.LOGIN_USER.roleID != 'US'}">
            <c:redirect url="login.jsp"></c:redirect>
        </c:if>
        <c:if test="${requestScope.LIST_ORDER==null}">
            <h1>You not order anything yer</h1>
        </c:if>
        <p style="color: red">${requestScope.CONFIRM_MESSAGE}</p>
        <c:if test="${requestScope.LIST_ORDER!=null}">
            <table class="table table-striped">
                <thead>
                    <tr class="table-success">
                        <th scope="col">No</th>
                        <th scope="col">Order ID</th>
                        <th scope="col">Address</th>
                        <th scope="col">Total Money</th>
                        <th scope="col">Order Date</th>
                        <th scope="col">Payment Option</th>
                        <th scope="col">More Detail</th>
                        <th scope="col">Order Confirm</th>
                    </tr>
                </thead>
                <tbody>
                    <c:forEach var="order" varStatus="counter" items="${requestScope.LIST_ORDER}">
                        <tr>
                            <th scope="row">${counter.count}</th>
                            <td>${order.orderID}</td>
                            <td>${order.address}</td>
                            <td>${order.totalMoney} VNƒê</td>
                            <td>${order.orderDate}</td>
                            <td>${order.paymentStatus}</td>
                            <td>${order.orderConfirm}</td>
                            <td>
                                <form action="MainController">
                                    <input type="hidden" name="orderID" value="${order.orderID}"/>
                                    <button class="btn btn-outline-primary"  type="submit" name="action" value="ViewOrderDetail">Detail</button>
                                </form>

                            </td>
                        </tr>
                    </c:forEach>
                </tbody>
            </table>
            <br>
        </c:if>
