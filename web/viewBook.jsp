        <section>
            <div class="d-flex justify-content-around">
                <div class="btn-group" role="group" aria-label="Basic outlined example">

                <c:forEach var="dto" items="${sessionScope.LIST_CATEGORY}">
                    <form action="MainController">
                        <input type="hidden" name="search" value="${dto.categoryName}"/>
                        <button type="submit"  name="action" value="SearchBook"class="btn btn-outline-primary">${dto.categoryName}</button>
                    </form>
                </c:forEach>

            </div>
        </div>

        <div class="album py-5 bg-light">

            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
                    <c:forEach var="dto" items="${requestScope.LIST_BOOK}">
                        <div class="col">
                            <div class="card shadow-sm">
                                <img style="height: 400px; width: 100%" src="${dto.image}"/>
                                <div class="card-body">
                                    <form method="GET" action="MainController">
                                        <input type="hidden" name="title" value="${dto.title}"/>
                                        <h5 class="card-title">${dto.title}</h5>
                                    </form>
                                    <p style="height: 200px" class="card-text">${dto.decs}</p>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <form action="MainController" method="GET">
                                                <input type="hidden" name="search" value="${dto.categoryID}"/>
                                                <button type="submit" class="btn btn-sm btn-primary" name="action" value="SearchBook">${dto.categoryID}</button>
                                            </form>
                                            <form action="MainController" method="GET">
                                                <input type="hidden" name="bookID" value="${dto.bookID}"/>
                                                <button type="submit" class="btn btn-sm btn-danger" name="action" value="ViewABook">View Product</button>
                                            </form>
                                        </div>
                                        <small class="text-primary">${dto.price} vnÄ‘</small>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </c:forEach>
                </div>
            </div>
        </div>
