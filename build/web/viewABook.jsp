        <section>
        <c:set var="dto" value="${requestScope.A_BOOK}">
        </c:set>

        <div class="container-sm mt-5">
            <form action="MainController" method="POST">
                <div class="row">


                    <div class="col-md-5">
                        <div class="carousel slide" data-ride="carousel" id="carousel-1">
                            <div class="carousel-inner" role="listbox">
                                <img class="img-thumbnail w-100 d-block" src="${dto.image}" alt="Slide Image" loading="lazy">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <h4>${dto.title}</h4>
                        <div class="d-flex align-items-center offers mb-1"><i class="fa fa-check-square-o mt-1"></i><span class="ml-1 font-weight-bold">${dto.decs}</span></div>
                        <br/>
                        <div><span class="font-weight-bold">Author: </span><span class="ml-2">${dto.author}</span></div>
                        <br/>
                        <div><span class="font-weight-bold">Category: </span><span class="ml-2">${dto.categoryID}</span></div>
                        <br/>
                        <label for="quantity">Quantity(${dto.quantity}): </label>
                        <input value="1" type="number" id="quantity" name="quantity" min="1" max="${dto.quantity}">
                        <br/>
                        <br/>
                        <div><span class="font-weight-bold">Price: </span><span class="ml-2">${dto.price} VNƒê</span></div>
                        <p class="lead"style="color: red">
                            ${requestScope.CART_MESSAGE}
                        </p>
                        <div class="mt-3">
                            <input type="hidden" name="bookID" value="${dto.bookID}"/>
                            <input type="hidden" name="quantity" value="${dto.quantity}"/>
                            <button class="btn btn-primary mr-2" type="submit" name="action" value="AddToCart">ADD TO CART
                            </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </section>

